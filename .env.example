# Time Tracker Configuration
# Copy this file to .env and update with your values

# Screenshot Settings
SCREENSHOT_INTERVAL=3.0
SCREENSHOT_IDLE_INTERVAL=30.0
SCREENSHOT_ACTIVITY_TIMEOUT=5.0
SCREENSHOT_QUALITY=50
SCREENSHOT_SCALE=1.0

# Data Directory
# Default location is inside your temp folder (e.g. C:\Users\YOU\AppData\Local\Temp\t_data)
# DATA_DIR=C:\Users\YOU\AppData\Local\Temp\t_data

# Folder Rotation Settings
FOLDER_ROTATION_INTERVAL=180
FOLDER_MAX_SIZE_MB=10

# Backblaze B2 Configuration
B2_KEY_ID=your_b2_key_id_here
B2_KEY=your_b2_key_here
B2_BUCKET_NAME=your_bucket_name_here
UPLOAD_TO_B2=true
DELETE_AFTER_UPLOAD=false

# Upload bandwidth limit in KB/s (e.g., 500 = 500 KB/s, set to 0 or leave empty for unlimited)
UPLOAD_BANDWIDTH_LIMIT_KBPS=500
